# Single Container Open Notebook Configuration

# ==============================================
# Host Configuration
# ==============================================
HOST=localhost

# ==============================================
# Local AI Configuration (Ollama via Traefik)
# ==============================================
OLLAMA_API_BASE=http://host.docker.internal:11434
# Model settings
DEFAULT_MODEL=llama3.2:3b

# ==============================================
# Application Settings
# ==============================================
TZ=America/New_York
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO
DEBUG=false
SURREAL_IGNORE_CLOSE_ERRORS=true
PYTHONWARNINGS=ignore

# CONNECTION DETAILS FOR YOUR SURREAL DB
# New format (preferred) - WebSocket URL
# SURREAL_URL="ws://surrealdb/rpc:8000"
SURREAL_USER="root"
SURREAL_PASSWORD="root"
SURREAL_NAMESPACE="open_notebook"
SURREAL_DATABASE="staging"

